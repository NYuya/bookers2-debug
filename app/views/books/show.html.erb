
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @newbook %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<td>
						<% if @book.user == current_user %>
						<%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
						<% end %>
					</td>
					<td>
						<% if @book.user == current_user %>
						<%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
						<% end %>
					</td>
					
					<td>
					<% if @book.favorited_by?(current_user) %>
					  <li>
					    <%= link_to book_favorites_path(@book), method: :delete do %>
					      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
					      <%= @book.favorites.count %> いいね
					    <% end %>
					  </li>
					<% else %>
					  <li>
					    <%= link_to book_favorites_path(@book), method: :post do %>
					      <i class="fa fa-heart-o" aria-hidden="true"></i>
					      <%= @book.favorites.count %> いいね
					    <% end %>
					  </li>
					<% end %>
					</td>

					<td>
					  <i class="fa fa-comment"></i>
					  <a href="#comments"><%= @book.book_comments.count %></a>
					</td>
					<td>
					<div class="comment-list bt style-2" id="comments">
					    <div class="float-wrapper">
					        <h4 class="comment-count"><%= @book.book_comments.count %>件コメント</h4>
					    </div>
					</div>
					</td>




					<td>
					<ol>
					    <% @book.book_comments.each do |book_comment| %>
					        <li class="comment">
					            <div class="comment-body bb">
					                <div class="comment-avatar">

					                </div>
					                <div class="comment-text">
					                    <div class="comment-author clearfix">
					                        <a href="#" class="link-author"><%= book_comment.user.name %></a>
					                        <span class="comment-meta">
					                          <span class="comment-date"><%= book_comment.created_at.strftime('%Y/%m/%d') %></span>
					                        </span>
					                    </div>
					                    <div class="comment-entry"><%= book_comment.comment %></div>
					                </div>
					            </div>
					        </li>
					    <% end %>
					</ol>
					</td>

					<td>
						<% if @book_comment.user == current_user %>
						  <%= link_to "削除", book.book_comment_path(@book.book_comment), method: :delete %>
						<% end %>
					</td>

					<!-- <form class="mt-20"> -->
					<td>
					<%= form_for [@book, @book_comment] do |f| %>
					    <div class="row">
					        <div class="col-sm-12">
					            <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
					        </div>
					    </div>
					    <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
					<% end %>
					</td>
					<!-- </form> -->

				</tr>
			</table>

	</div>
</div>

